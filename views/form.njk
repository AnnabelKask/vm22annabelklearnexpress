
    {% extends "partials/layout.njk"%}
      {%block title %}Form{% endblock %}
      {%block content %}
       <h1>Form</h1>
       {% if fname and lname and age %}
       <p>Hello {{fname}} {{lname}}! You are {{age}} years old! </p>
       {%endif%}
       <Form>
        <p>
       <label>First Name
       <input type="text" name="fname" placeholder="First Name">
       </label>
       </p>
       <p>
       <label>Last Name
       <input type="text" name="lname" placeholder="Last Name">
       </label>
       </p>
       <p>
       <label>Age
       <input type="number" min="0" placeholder="Age" name="age">
       </label>
       </p>
       <p>
       <input type="submit" value="KLIKKA" >
       </p>
       </Form>
     {% endblock %}